<Page x:Class="app_1.Pages.CustomerMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:app_1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerMenu">

    <Grid RenderTransformOrigin="0.498,0.544">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="195*"/>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="195*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Content="Переход 1" Grid.Row="1" Margin="0,0,0,100" Click="Button_Click"/>
        <Button Grid.Column="1" Content="Переход 2" Grid.Row="1" Margin="0,50,0,50" Click="Button_Click_1"/>
        <Button Grid.Column="1" Content="Переход 3" Grid.Row="1" Margin="0,100,0,162" Grid.RowSpan="2" Click="Button_Click_2"/>

    </Grid>
</Page>
